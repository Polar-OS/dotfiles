{
    "$schema": "./config.schema.json",
    "theme": "current",
    "wallpaper": "~/Pictures/Wallpapers/wallpaper.png",
    "enabledThemes": [
        "dynamic",
        "dynamic-inverted",
        "base16-polar-dark",
        "base16-polar-light",
        "base16-tokyo-night-dark",
        "base16-tokyo-night-storm",
        "base16-catppuccin-mocha",
        "base16-catppuccin-macchiato",
        "base16-catppuccin-frappe",
        "base16-catppuccin-latte",
        "base16-dracula",
        "base16-nord",
        "base16-gruvbox-dark-hard",
        "base16-gruvbox-light-hard",
        "base16-rose-pine",
        "base16-rose-pine-moon",
        "base16-rose-pine-dawn",
        "base16-solarized-dark",
        "base16-solarized-light",
        "base16-everforest",
        "base16-ayu-dark",
        "base16-ayu-light",
        "base16-ayu-mirage",
        "base16-github-dark",
        "base16-github",
        "base16-kanagawa",
        "base16-material",
        "base16-material-palenight",
        "base16-monokai",
        "base16-onedark",
        "base16-oxocarbon-dark",
        "base16-vesper"
    ],
    "layout": {
        "panelEdgeRevealDelay": 1000,
        "padding": 10,
        "spacing": 10,
        "buttonSize": 40,
        "iconSize": 18,
        "panelWidth": 320
    },
    "animations": {
        "global": {
            "fast": 100,
            "regular": 200,
            "slow": 500,
            "easing": "OutCubic"
        },
        "panel": {
            "reveal": 500,
            "autoHideDelay": 5000,
            "easing": "Polar"
        },
        "feedback": {
            "hover": 250,
            "shake": 50,
            "pulse": 800,
            "easingPulse": "InOutSine",
            "easingBounce": "Polar"
        },
        "screensaver": {
            "step": 1000,
            "fast": 2000,
            "medium": 4000,
            "slow": 5000,
            "verySlow": 10000
        },
        "misc": {
            "background": 600,
            "pause": 400
        }
    },
    "fonts": {
        "family": "Cascadia Code",
        "iconFamily": "Symbols Nerd Font, FontAwesome, Cascadia Code"
    },
    "pomodoro": {
        "duration": 52,
        "breakDuration": 17,
        "longBreakDuration": 30,
        "cycleCount": 4
    },
    "screensavers": [
        "NiriSaver.qml",
        "PolarSaver.qml",
        "FedoraSaver.qml",
        "QuickshellSaver.qml",
        "ArchSaver.qml",
        "UbuntuSaver.qml",
        "HyprlandSaver.qml",
        "DebianSaver.qml",
        "WaylandSaver.qml",
        "CachySaver.qml"
    ]
}
